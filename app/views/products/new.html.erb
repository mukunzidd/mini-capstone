<h1>New Product</h1>

  <%= form_for @product do  |f| %>
    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :price %>
      <%= f.text_field :price %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.label :image %>
      <%= f.text_field :image %>
    </p>

    <p>
      <%= f.submit %>
    </p>

  <% end -%>

<%= link_to 'Cancel', root_path %>
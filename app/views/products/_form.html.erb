<%= form_for @product do |f| %>
  <%= f.label :name %> <br>
  <%= f.text_field :name %>
  <br>
  <%= f.label :price %> <br>
  <%= f.text_area :price %>
   <br>
  <%= f.label :description %> <br>
  <%= f.text_area :description %>
  <br>
  <%= f.label :image %> <br>
  <%= f.text_field :image %> <br>
    
  <%= f.submit %>
<% end %>
<div class="container-fluid">
  <h2><%= @product.name %></h2>
    <div class="row">
      <div class="col-md-4">
        <% @product.images.each do |image| %>
          <img src="<%= image.url %>" alt="<%= @product.name %>">
        <% end %>
      </div>
    </div>
  <p><%= @product.description %></p>
   <p><strong>Brought to you by:</strong> <%= @product.supplier.name %> Ltd.</p>
   <p><strong>Supplier contact:</strong> <%= @product.supplier.email %></p>
</div>
